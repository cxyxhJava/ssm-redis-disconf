<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.frank</groupId>
    <artifactId>ssm-redis-disconf</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>frankCore</module>
        <module>frankWeb</module>
        <module>frankCenter</module>
    </modules>

    <!--设置pom文件类型-->
    <packaging>pom</packaging>

    <!--常量-->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!--spring-->
        <spring.version>4.2.9.RELEASE</spring.version>
        <spring.core.version>4.2.9.RELEASE</spring.core.version>

        <servlet.api.version>3.0-alpha-1</servlet.api.version>

        <!--db-->
        <!--mybaties-->
        <mybatis.version>3.2.6</mybatis.version>
        <mybatis-spring.version>1.2.2</mybatis-spring.version>
        <!--mysql-->
        <java.sql.version>5.1.13</java.sql.version>
        <!--druid-->
        <druid.version>1.0.29</druid.version>

        <!--logback-->
        <logback.ext.spring.version>0.1.1</logback.ext.spring.version>
        <logback.access.version>1.1.11</logback.access.version>
        <logback.classes.version>1.1.11</logback.classes.version>

        <fastjson.version>1.1.42</fastjson.version>


        <commons.codec.version>1.8</commons.codec.version>
        <commons.beanutils.version>1.9.2</commons.beanutils.version>
        <commons.lang.version>2.6</commons.lang.version>
        <commons.lang3.version>3.5</commons.lang3.version>
        <commons.collections.version>3.2.1</commons.collections.version>
        <commons-io.version>2.4</commons-io.version>
        <commons-fileupload.version>1.3.2</commons-fileupload.version>


    </properties>

    <!--管理-->
    <dependencyManagement>
        <dependencies>

            <!-- 容器自带 -->
            <dependency>
                <groupId>javax.servlet</groupId>
                <artifactId>servlet-api</artifactId>
                <version>${servlet.api.version}</version>
                <scope>provided</scope>
            </dependency>


            <dependency>
                <artifactId>frankCenter</artifactId>
                <groupId>com.frank</groupId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <artifactId>frankCore</artifactId>
                <groupId>com.frank</groupId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <!--spring-->
            <!--spring 相关jar -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-aop</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-aspects</artifactId>
                <version>${spring.version}</version>
